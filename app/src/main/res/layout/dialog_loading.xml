<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/bg_solid_black_8"
    android:padding="12dp">

    <ProgressBar
        android:id="@+id/dialog_loading_progressbar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/dialog_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/dialog_loading_progressbar"
        android:paddingRight="48dp"
        android:text="@string/loading_default"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>